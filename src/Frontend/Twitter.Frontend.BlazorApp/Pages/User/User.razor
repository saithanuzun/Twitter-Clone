@page "/user"
@using Twitter.Frontend.BlazorApp.Infrastructure.Models.ViewModels



    <!-- Profile Card Container -->
    <div class="w-full max-w-2xl mx-auto bg-white rounded-xl shadow-lg overflow-hidden">

        <!-- Background Image (Banner) -->
        <div class="relative h-48 bg-gray-300 overflow-hidden">
            <img src="https://placehold.co/1200x300/A78BFA/FFFFFF?text=Profile+Banner"
                 alt="Profile Banner"
                 class="w-full h-full object-cover">
            <!-- Edit Profile Button (Optional, for UI demo) -->
            <button class="absolute top-4 right-4 bg-white text-gray-800 px-4 py-2 rounded-full text-sm font-semibold shadow-md
                           hover:bg-gray-100 transition-colors duration-200">
                Edit Profile
            </button>
        </div>

        <!-- Profile Image and Main Info Section -->
        <!-- Adjusted pt- values to ensure content starts below the profile image -->
        <div class="relative p-6 pt-4 md:p-8 md:pt-6">
            <!-- Profile Image (positioned to overlap banner) -->
            <div class="absolute -top-10 left-6 md:left-8">
                <img src="https://picsum.photos/640/480/?image=290"
                     alt="Profile Picture"
                     class="w-20 h-20 md:w-24 md:h-24 rounded-full border-4 border-white shadow-md object-cover">
            </div>

            <!-- Follow Button (positioned next to profile image, responsive) -->
            <!-- Explicitly added pt-8 md:pt-10 to push the button down, clearing the profile image -->
            <div class="flex justify-end pt-8 md:pt-10">
                <button class="px-6 py-2 bg-blue-500 text-white rounded-full text-base font-semibold shadow-md
                               hover:bg-blue-600 transition-colors duration-200
                               focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50">
                    Follow
                </button>
            </div>

            <!-- User Name and Handle -->
            <!-- Adjusted mt- for better spacing relative to the button's new position -->
            <div class="mt-2">
                <h2 class="text-2xl md:text-3xl font-bold text-gray-900">John P. Doe</h2>
                <p class="text-gray-500 text-sm md:text-base">@@ohn_p_doe</p>
            </div>

            <!-- Bio -->
            <p class="mt-4 text-gray-700 leading-relaxed">
                Passionate software developer and tech enthusiast. Exploring the intersection of code, design, and user experience. Always learning and building.
            </p>

            <!-- Location, Born Date, and Joined Date -->
            <div class="mt-4 flex flex-wrap items-center text-gray-500 text-sm space-y-2 sm:space-y-0 sm:space-x-4">
                <div class="flex items-center">
                    <!-- Adjusted SVG size to w-2 h-2 and increased margin-right to mr-2 -->
                    <svg class="w-2 h-2 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    </svg>
                    <span>London, UK</span>
                </div>
                <div class="flex items-center">
                    <!-- Adjusted SVG size to w-2 h-2 and increased margin-right to mr-2 -->
                    <svg class="w-2 h-2 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                    </svg>
                    <span>Born October 26, 1990</span>
                </div>
                <div class="flex items-center">
                    <!-- Adjusted SVG size to w-2 h-2 and increased margin-right to mr-2 -->
                    <svg class="w-2 h-2 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                    </svg>
                    <span>Joined July 2010</span>
                </div>
            </div>

            <!-- Followers and Following Counts -->
            <div class="mt-6 flex space-x-6 text-gray-700">
                <div>
                    <span class="font-bold text-gray-900">12.5K</span>
                    <span class="text-gray-500"> Followers</span>
                </div>
                <div>
                    <span class="font-bold text-gray-900">789</span>
                    <span class="text-gray-500"> Following</span>
                </div>
            </div>
        </div>
    </div>


<UserNavbar></UserNavbar>

<!-- MID PART -->
    <div class="flex flex-col w-full items-center">
      <section class="w-full max-w-[600px] border-gray-500/40 border-r-[0.1px] border-l-[0.1px] sm:pb-0 pb-14">
        <!-- POST section -->
        <div class="flex flex-col">
          @foreach (var post in tweets)
          {
            <TweetCard tweet="post"></TweetCard>
          }
        </div>
      </section>
    </div>

